<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/poi_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="-" />

    <TextView
        android:id="@+id/poi_content_txt"
        android:layout_below="@id/poi_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="-" />

    <Button
        android:id="@+id/poi_start_btn"
        android:layout_below="@id/poi_content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="起点" />

    <Button
        android:id="@+id/poi_end_btn"
        android:layout_below="@id/poi_content_txt"
        android:layout_toRightOf="@id/poi_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="终点" />
</RelativeLayout>